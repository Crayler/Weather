<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="客户端" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="2" x:Name="txtf" Margin="100,10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <TextBox Grid.Row="1" x:Name="txt" Margin="100,10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <ComboBox Grid.Row="0" x:Name="cbCity"  HorizontalAlignment="Left" Margin="151,7,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbCity_SelectionChanged"/>
        <Label Content="城市：" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center"/>
    </Grid>
</Window>
